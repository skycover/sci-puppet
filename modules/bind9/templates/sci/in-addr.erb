<% if not @sci_node2_lan_revip.empty? and @sci_node2_lan_revip -%>
<%= @sci_node2_lan_revip %>.in-addr.arpa.   IN PTR <%= @sci_node2_name %>-lan.<%= @domain %>.
<% end -%>
<% if not @sci_node2_san_revip.empty? and @sci_node2_san_revip -%>
<%= @sci_node2_san_revip %>.in-addr.arpa.   IN PTR <%= @sci_node2_name %>-san.<%= @domain %>.
