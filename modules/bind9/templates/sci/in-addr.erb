$TTL 1h

168.192.in-addr.arpa. IN SOA <%= @hostname %>.<%= @domain %>. postmaster.<%= @domain %>. (
 0000000001 ; Serial
 4h         ; Refresh
 2h         ; Retry
 500h       ; Expire
 3h       ) ; Negative TTL

@ IN NS <%= @hostname %>.<%= @domain %>.

<% if not @sci_cluster_ip.empty? and @sci_cluster_ip -%>
<%= @sci_cluster_revip %>.in-addr.arpa. IN PTR <%= @sci_cluster_name %>.<%= @domain %>.
<% end -%>
<% if not @sci_node1_ip.empty? and @sci_node1_ip -%>
