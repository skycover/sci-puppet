<% end -%>
<% if @sci_node1_lan_ip.empty? and @sci_node1_san_ip -%>
<%= @sci_node1_san_revip %>.in-addr.arpa.  IN PTR <%= @sci_node1_name %>-san.<%= @domain %>.
<% end -%>
<%= @sci_sci_revip %>.in-addr.arpa.  IN PTR <%= @hostname %>.<%= @domain %>.
<% if not @sci_sci_lan_revip.empty? and @sci_sci_lan_revip -%>
<%= @sci_sci_lan_revip %>.in-addr.arpa.   IN PTR <%= @hostname %>-lan.<%= @domain %>.
<% end -%>
<% if not @sci_node2_revip.empty? and @sci_node2_revip -%>
<%= @sci_node2_revip %>.in-addr.arpa.  IN PTR <%= @sci_node2_name %>.<%= @domain %>.
